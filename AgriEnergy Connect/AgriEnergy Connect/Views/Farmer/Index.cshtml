@model List<AgriEnergyConnect.Models.Product>

@{
    ViewBag.Title = "My Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Author: Bootstrap
    Title:Fonts
    Date: N/A
    Avaliability: https://getbootstrap.com/docs/5.3/forms/overview/-->

<style>
    /*Author: GeeksforGeeks
          Title: CSS Forms Styling
          Date: 2 January 2019
              Avaliability: https://www.geeksforgeeks.org/css-styling-forms/
        */
    body {
        background-color: #FAF9F6;
    }

    .btn-green {
        background-color: #2E7D32;
        color: white;
        border: none;
    }

        .btn-green:hover {
            background-color: #256028;
        }

    .card-product {
        background-color: white;
        border-left: 6px solid #2E7D32;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        margin-bottom: 20px;
        padding: 20px;
        height: 100%;
    }

    .card-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 6px;
        margin-bottom: 10px;
    }

    .card-title {
        color: #2E7D32;
        font-size: 1.25rem;
        margin-bottom: 10px;
    }

    .card-text {
        color: #212121;
    }
    /*Author: GeeksforGeeks
          Title: CSS Forms Styling
          Date: 2 January 2019
              Avaliability: https://www.geeksforgeeks.org/css-styling-forms/
        */
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success">My Products</h2>
        <a href="@Url.Action("AddProduct")" class="btn btn-green">+ Add New Product</a>
    </div>

    <div class="row"> <!--Displays products on card-->
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card-product">
                    <h3 class="card-title">@item.Name</h3> <!--Displays name-->
                    <p class="card-text"><strong>Category:</strong> @item.Category</p> <!--Displays category-->
                    <p class="card-text"><strong>Description:</strong> @item.Description</p> <!--Displays description-->
                    <p class="card-text"><strong>Production Date:</strong> @item.ProductionDate.ToShortDateString()</p> <!--Displays date-->
                    <p class="card-text"><strong>Price:</strong> R @item.Price</p> <!--Displays price-->
                    <p class="card-text">
                        <a href="@Url.Action("EditProduct", "Farmer", new { id = item.ProductId })" class="btn btn-sm btn-warning">Edit</a>

                        <form asp-action="DeleteProduct" asp-controller="Farmer" asp-route-id="@item.ProductId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                        </form>
                    </p>


                </div>
            </div>
        }
    </div>
</div>
